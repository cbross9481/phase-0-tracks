SELECT businesses.name, users.first_name, users.last_name, reviews.stars, reviews.comment FROM reviews INNER JOIN businesses ON reviews.business_id = businesses.id INNER JOIN users ON reviews.user_id = users.id;
	Amir's Towing|Angela|Jolie|5|Great Experience
	Grundy Hollow Weding Chapel|Mandy|Kaling|4|Loved it
	The Beagle Nightclub|Bradford|Pitt|1|Worst food

SELECT businesses.name, users.first_name, users.last_name, reviews.stars, reviews.comment FROM reviews INNER JOIN businesses ON reviews.business_id = businesses.id INNER JOIN users ON reviews.user_id = users.id WHERE businesses.name = "Amir's Towing";
	Amir's Towing|Angela|Jolie|5|Great Experience
